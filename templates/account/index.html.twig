{% extends 'base.html.twig' %}



{% block body %}

    <h1 class="mt-3">Espace membre</h1>

<div class= "container my-5">

    <div class= "row">

        <div class= "col-md-3">{% include 'account/_menu.html.twig'%}</div>
        <div class= "col-md-9">
        
        <h5>Mes dernières commandes</h5>
        
        {% if (orders|length ==0)%}
        <div class="alert alert-info">
        Vous n'avez passé aucune commande pour le moment
        </div>
        {% else %}


        <table class="table">
  <thead>
    <tr>
      <th scope="col">Numéro de commande</th>
      <th scope="col">Date</th>
      <th scope="col">Statut</th>
      <th scope="col">Total TTC</th>
    </tr>
  </thead>
  <tbody>
  {% for order in orders %}
    <tr>
      <td>{{order.id}}</td>
      <td>{{order.createdAt|date('d/m/Y')}}</td>
      <td>{{ include('admin/state.html.twig', { field : {'value' : order.state }}) }}</td>
      <td>{{order.getTotalWt|price}}</td>
    </tr>
  {% endfor %}
  </tbody>
</table>
{% endif %}

        </div>


    </div>

    

</div>

{% endblock %}
